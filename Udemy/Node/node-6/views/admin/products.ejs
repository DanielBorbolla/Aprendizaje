<%-include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/product.css">
<%-include('../includes/nav.ejs')%>
    <main>
        <% if(prods.length>0) {%>
          
          <div class="grid">
            <% for (let productos of prods) {  %>
            <article class="card product-item">
              <header class="card__header">
                <h1 class="product__title"><%=productos.title%></h1>
              </header>
              <div class="card__image">
                <img src="<%=productos.imageURL%>" alt="<%=productos.title%>">
              </div>
              <div class="card__content">
                <h2 class="product__price">$<%=productos.price%></h2>
                <p class="product__description"><%=productos.description%></p>
              </div>
              <div class="card__actions">
                <a href="/admin/edit-product/<%= productos.id%>?edit=true" class="btn">Edit</a>
                <form action="/admin/delete-product" method ="POST">
                    <button class="btn" type = "submit">Delete</button>
                    <input type="hidden" name="productId" value="<%= productos.id %>" >
                    
                </form>
              </div>
            </article>
            <% }%>
          </div>

        <%} else{%>
          <h1>No hay nada que ver</h1>
         <%} %>
    </main>
</body>

</html>